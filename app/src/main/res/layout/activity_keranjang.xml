<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.biyan.ubama.KeranjangActivity"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_keranjang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/layout_lanjut_pesan"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Total Harga:"/>
            <TextView
                android:id="@+id/total_harga"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."/>
        </RelativeLayout>
        <Button
            android:id="@+id/proses"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Proses Pesanan"/>
    </LinearLayout>

    <TextView
        android:id="@+id/empty"
        android:text="Keranjang Anda kosong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"/>
</LinearLayout>
